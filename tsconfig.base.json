{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@agoda-devfeedback/common": ["packages/common/src/index.ts"],
      "@agoda-devfeedback/vite": ["packages/vite-plugin/src/index.ts"],
      "@agoda-devfeedback/webpack": ["packages/webpack-plugin/src/index.ts"],
      "@agoda-devfeedback/rspack": ["packages/rspack-plugin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}