{
    "name": "rspack-plugin",
    "dependencies": ["common"],
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/rspack-plugin/src",
    "projectType": "library",
    "targets": {
      "build": {
        "executor": "@nx/js:tsc",
        "outputs": ["{options.outputPath}"],
        "options": {
          "outputPath": "dist/packages/rspack-plugin",
          "main": "packages/rspack-plugin/src/index.ts",
          "tsConfig": "packages/rspack-plugin/tsconfig.lib.json",
          "assets": ["packages/rspack-plugin/*.md"]
        }
      },
      "publish": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node tools/scripts/publish.js rspack-plugin {args.ver} {args.tag}"
        },
        "dependsOn": ["build"]
      },
      "lint": {
        "executor": "@nx/linter:eslint",
        "outputs": ["{options.outputFile}"],
        "options": {
          "lintFilePatterns": ["packages/rspack-plugin/**/*.ts"]
        }
      },
      "test": {
        "executor": "@nx/jest:jest",
        "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
        "options": {
          "jestConfig": "packages/rspack-plugin/jest.config.ts"
        }
      }
    },
    "tags": []
  }